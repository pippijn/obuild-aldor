.SYSTEM:

STRICT_CFLAGS =
  FLAGS[] =
    -pedantic
    -std=c89
    -Wall
    -Wextra
    -Werror
    -Wno-empty-body
    -Wno-enum-compare
    -Wno-missing-field-initializers
    -Wno-sign-compare
    -Wno-unused
    -Wno-unused-parameter
    #-Wno-error=maybe-uninitialized
    -Wno-error=format
    -Wno-error=type-limits
    -Wno-error=strict-aliasing
    -funsigned-char

  switch $(basename $(CC))
  case clang:
    FLAGS[] +=
      -fcolor-diagnostics
      -Wno-error=enum-conversion
      -Wno-error=tautological-compare
    export
  case gcc:
    FLAGS[] +=
      -Wno-error=clobbered
    export
  case i686-w64-mingw32-gcc:
    FLAGS[] +=
      -Wno-error=clobbered
    export

  value $(FLAGS)

Version = 1.1.0

recurse ()
