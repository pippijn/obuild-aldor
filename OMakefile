STRICT_CFLAGS[] =
  -Wall
  -Wextra
  -Werror
  -Wno-empty-body
  -Wno-enum-compare
  -Wno-enum-conversion
  -Wno-missing-field-initializers
  -Wno-shift-overflow
  -Wno-sign-compare
  -Wno-tautological-compare
  -Wno-unused
  -Wno-unused-parameter
  -Wno-error=type-limits
  -Wno-error=parentheses

recurse-into ($(glob D, *))
