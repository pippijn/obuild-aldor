.SYSTEM:

STRICT_CFLAGS =
  FLAGS[] =
    -Wall
    -Wextra
    -Werror
    -Wno-empty-body
    -Wno-enum-compare
    -Wno-missing-field-initializers
    -Wno-sign-compare
    -Wno-unused
    -Wno-unused-parameter
    -Wno-error=type-limits
    -Wno-error=parentheses
    -Wno-error=char-subscripts

  switch $(basename $(CC))
  case clang:
    FLAGS[] +=
      -Wno-enum-conversion
      -Wno-shift-overflow
      -Wno-tautological-compare
    export

  value $(FLAGS)

Version = 1.1.0

recurse ()
