\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{diagrams}[2006/04/03]

% various commands vor diagrams

\newenvironment{diagraminfigure}[3]{%
%%  #1 width
%%  #2 label
%%  #3 caption
\begin{figure}%
\def\diagraminfigureparameterb{#2}
\def\diagraminfigureparameterc{#3}
\begin{center}
%\begin{tabular}{|c|}%
%\hline \\%
\begin{minipage}[h]{#1}
}{
\end{minipage}
%\\ \hline%
%\end{tabular}%
\end{center}
\caption{\diagraminfigureparameterc}
\hintedlabel{fig:\diagraminfigureparameterb}
\end{figure}%
}

\newcommand\diagrameps[3][4in]{%
%%  #1 width
%%  #2 label = filename
%%  #3 caption
\begin{diagraminfigure}{#1}{#2}{#3}%
%\epsfxsize=#1\epsfbox{pics/#2.eps}%
\includegraphics[width=#1]{pics/#2}%
\end{diagraminfigure}%
}

\newcommand\diagramtex[4][3in]{%
%%  #1 width
%%  #2 label
%%  #3 caption
%%  #4 latex code for the diagram
\begin{diagraminfigure}{#1}{#2}{#3}%
$$\begin{diagram}%
#4
\end{diagram}$$%
\end{diagraminfigure}%
}

