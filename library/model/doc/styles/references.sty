\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{references}[2006/03/31]

\usepackage{hintedlabels}

% custom references

\newcommand\defsec[1]{\hintedlabel{sec:#1}}
\newcommand\refsec[2][Section]{\hyperlink{sec:#2}{#1} \ref{sec:#2}}

\newcommand\defpage[1]{\hintedlabel{page:#1}}
\newcommand\refpage[2][page]{\hyperlink{page:#2}{#1} \pageref{page:#2}}

\newcommand\deflemma[1]{\hintedlabel{lemma:#1}}
\newcommand\reflemma[2][Lemma]{\hyperlink{lemma:#2}{#1} \ref{lemma:#2}}

\newcommand\reffig[2][Figure]{\hyperlink{fig:#2}{#1} \ref{fig:#2}}

\newcommand\refalg[2][Algorithm]{\hyperlink{alg:#2}{#1} \ref{alg:#2}}

\newcommand\reftab[2][Table]{\hyperlink{table:#2}{#1} \ref{table:#2}}
